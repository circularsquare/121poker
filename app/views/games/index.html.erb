<p id="notice"><%= notice %></p>

<h1>Games</h1>
<div class="container">
  <div class="table">
    <div class="table-header">
      <div class="header__item"> room name </div>
      <div class="header__item"> players </div>
      <div class="header__item"> </div>
      <div class="header__item"> </div>
      <div class="header__item"> </div>
    </div>
    <% @games.each do |game| %>
      <div class="table-row">
        <div class='table-data'> <%= game.room_name %></div>
        <div class='table-data'> <%= game.players.length %></div>
        <div class='table-data'> <%= link_to 'Show', game%></div>
        <div class='table-data'> <%= link_to 'Edit', edit_game_path(game) %></div>
        <div class='table-data'> <%= link_to 'Destroy', game, method: :delete, data: {confirm: 'Are you sure you would like to delete this game?' }%></div>
      </div>
    <%end%>
  </div>
</div>



